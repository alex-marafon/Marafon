@model IEnumerable<Aluguel.Dominio.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imovel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaVencimentoAlguel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Locador.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imovel.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaVencimentoAlguel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContratoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContratoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContratoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
